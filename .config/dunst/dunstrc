[global]
    ### Display ###
    monitor = 0
    follow = none
    width = 250
    height = (0, 80)
    origin = top-right
    offset = (10, 50)
    scale = 0
    notification_limit = 5

    ### Geometry ###
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 1
    progress_bar_min_width = 120
    progress_bar_max_width = 250

    ### Text ###
    font = Iosevka Nerd Font 12
    line_height = 4
    padding = 12
    horizontal_padding = 12
    text_icon_padding = 0
    separator_height = 2
    separator_color = frame

    ### Appearance ###
    corner_radius = 12
    transparency = 10
    frame_width = 2
    frame_color = "#1E1E1E"
    background = "#2D2D2DE6"
    foreground = "#FFFFFF"
    highlight = "#007AFF"

    ### Behavior ###
    show_age_threshold = 60
    sticky_history = yes
    history_length = 20
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    force_xwayland = false
    force_xinerama = false
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

    ### Shortcuts ###
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#2D2D2DE6"
    foreground = "#FFFFFF"
    frame_color = "#1E1E1E"
    timeout = 5

