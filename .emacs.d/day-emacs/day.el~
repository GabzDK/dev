(add-to-list 'package-archives
             '("melpa" . "https://melpa.org/packages/"))
;; (add-to-list 'package-archives
;;              '("melpa-stable" . "https://stable.melpa.org/packages/") t)

(defvar day/package-contents-refreshed nil)

(defun day/package-refresh-contents-once ()
  (when (not day/package-contents-refreshed)
    (setq day/package-contents-refreshed t)
    (package-refresh-contents)))

(defun day/require-one-package (package)
  (when (not (package-installed-p package))
    (day/package-refresh-contents-once)
    (package-install package))
  (require package))

(defun day/require (&rest packages)
  (dolist (package packages)
    (day/require-one-package package)))

(defun day/require-theme (theme)
  (let ((theme-package (->> theme
                            (symbol-name)
                            (funcall (-flip #'concat) "-theme")
                            (intern))))
    (day/require theme-package)
    (load-theme theme t)))

(day/require 'dash)
(require 'dash)

(day/require 'dash-functional)
(require 'dash-functional)
(day/require 'use-package)
(require 'use-package)
